<Window x:Class="CrossModGui.Views.CameraSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossModGui.Views"
        mc:Ignorable="d"
        Title="Camera Settings" Height="450" Width="800">
    <StackPanel>
        <GroupBox Header="Translation">
            <!--TODO: custom controls for combined textbox,label,slider,etc-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0">X (Scene Units)</Label>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding PositionX}"></TextBox>
                <Label Grid.Row="1" Grid.Column="0">Y (Scene Units))</Label>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PositionY}"></TextBox>
                <Label Grid.Row="2" Grid.Column="0">Z (Scene Units)</Label>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding PositionZ}"></TextBox>
            </Grid>
        </GroupBox>
        <GroupBox Header="Rotation">
            <!--TODO: custom controls for combined textbox,label,slider,etc-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0">X (Degrees)</Label>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RotationXDegrees}"></TextBox>
                <Label Grid.Row="1" Grid.Column="0">Y (Degrees)</Label>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RotationYDegrees}"></TextBox>
                <Label Grid.Row="2" Grid.Column="0">Z (Degrees)</Label>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding RotationZDegrees}"></TextBox>
            </Grid>
        </GroupBox>
    </StackPanel>
</Window>
