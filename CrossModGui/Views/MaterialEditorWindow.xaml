<Window x:Class="CrossModGui.Views.MaterialEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossModGui.Views"
        mc:Ignorable="d"
        Title="Material Editor" Height="450" Width="800">
    <DockPanel Margin="10" LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Export Matl" Click="ExportMatl_Click">
                </MenuItem>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Top" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0">Current Material</TextBlock>
            <ComboBox Grid.Column="1" ItemsSource="{Binding Materials}" SelectedItem="{Binding CurrentMaterial}" SelectedIndex="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"></TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <GroupBox DockPanel.Dock="Bottom">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Expander Header="CustomBoolean Params" IsExpanded="False">
                        <ItemsControl ItemsSource="{Binding CurrentMaterial.BooleanParams}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"></ColumnDefinition>
                                            <ColumnDefinition Width="80"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" TextAlignment="Right" Margin="10,0"></TextBlock>
                                        <CheckBox Grid.Column="1" IsChecked="{Binding Value}">
                                        </CheckBox>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                    <Expander Header="CustomFloat Params" IsExpanded="False">
                        <ItemsControl ItemsSource="{Binding CurrentMaterial.FloatParams}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"></ColumnDefinition>
                                            <ColumnDefinition Width="80"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Text="{Binding Name}" Margin="10,0"></TextBlock>
                                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                        <Slider Grid.Row="0" Grid.Column="2" Value="{Binding Value}"></Slider>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                    <Expander Header="CustomVector Params" IsExpanded="False">
                        <ItemsControl ItemsSource="{Binding CurrentMaterial.Vec4Params}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"></ColumnDefinition>
                                            <ColumnDefinition Width="80"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Margin="10,5" Text="{Binding Name}"></TextBlock>
                                        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Margin="10,5">X/Red</TextBlock>
                                        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="10,5">Y/Green</TextBlock>
                                        <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Margin="10,5">Z/Blue</TextBlock>
                                        <TextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Margin="10,5">W/Alpha</TextBlock>
                                        <TextBox Grid.Row="1" Grid.Column="1" Margin="5,5" Text="{Binding Value1, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                        <TextBox Grid.Row="2" Grid.Column="1" Margin="5,5" Text="{Binding Value2, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                        <TextBox Grid.Row="3" Grid.Column="1" Margin="5,5" Text="{Binding Value3, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                        <TextBox Grid.Row="4" Grid.Column="1" Margin="5,5" Text="{Binding Value4, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                        <Slider Grid.Row="1" Grid.Column="2" Margin="5,5" Value="{Binding Value1}"></Slider>
                                        <Slider Grid.Row="2" Grid.Column="2" Margin="5,5" Value="{Binding Value2}"></Slider>
                                        <Slider Grid.Row="3" Grid.Column="2" Margin="5,5" Value="{Binding Value3}"></Slider>
                                        <Slider Grid.Row="4" Grid.Column="2" Margin="5,5" Value="{Binding Value4}"></Slider>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                    <Expander Header="Texture Params" IsExpanded="True">
                        <ItemsControl ItemsSource="{Binding CurrentMaterial.TextureParams}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                            <ColumnDefinition Width="4*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" HorizontalAlignment="Right"></TextBlock>
                                        <ComboBox Grid.Column="1" 
                                          ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.PossibleTextureNames}"
                                          SelectedItem="{Binding Value}">
                                        </ComboBox>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </DockPanel>
</Window>
