<Window x:Class="CrossModGui.Views.MaterialEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossModGui.Views"
        mc:Ignorable="d"
        Title="Material Editor" Height="450" Width="800">
    <DockPanel Margin="10" LastChildFill="True">
        <Grid DockPanel.Dock="Top" Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0">Material Name</TextBlock>
            <ComboBox Grid.Column="1" ItemsSource="{Binding MaterialNames}"></ComboBox>
        </Grid>
        <GroupBox DockPanel.Dock="Bottom">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Expander Header="CustomBoolean Params">
                        <ItemsControl ItemsSource="{Binding BooleanParams}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Value}">
                                        <TextBlock Text="{Binding Name}"></TextBlock>
                                    </CheckBox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                    <Expander Header="CustomFloat Params">
                        <ItemsControl ItemsSource="{Binding FloatParams}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                            <ColumnDefinition Width="2*"></ColumnDefinition>
                                            <ColumnDefinition Width="4*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Text="{Binding Name}"></TextBlock>
                                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                        <Slider Grid.Row="0" Grid.Column="2" Value="{Binding Value}"></Slider>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                    <Expander Header="CustomVector Params">
                        <ItemsControl ItemsSource="{Binding Vec4Params}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <GroupBox Header="{Binding Name}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                                <ColumnDefinition Width="2*"></ColumnDefinition>
                                                <ColumnDefinition Width="4*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right">X</TextBlock>
                                            <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right">Y</TextBlock>
                                            <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right">Z</TextBlock>
                                            <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right">W</TextBlock>
                                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Value1, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Value2, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Value3, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Value4, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                                            <Slider Grid.Row="0" Grid.Column="2" Value="{Binding Value1}"></Slider>
                                            <Slider Grid.Row="1" Grid.Column="2" Value="{Binding Value2}"></Slider>
                                            <Slider Grid.Row="2" Grid.Column="2" Value="{Binding Value3}"></Slider>
                                            <Slider Grid.Row="3" Grid.Column="2" Value="{Binding Value4}"></Slider>
                                        </Grid>
                                    </GroupBox>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                    <Expander Header="Texture Params">
                        <ItemsControl ItemsSource="{Binding TextureParams}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"></ColumnDefinition>
                                            <ColumnDefinition Width="4*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Name}" HorizontalAlignment="Right"></TextBlock>
                                        <ComboBox Grid.Column="1" 
                                          ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.PossibleTextureNames}" DataContext=""
                                          SelectedValue="{Binding Value}" SelectedValuePath="Value">
                                        </ComboBox>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </DockPanel>
</Window>
