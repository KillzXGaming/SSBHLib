<Window x:Class="CrossModGui.Views.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrossModGui.Views"
        mc:Ignorable="d"
        Title="Application Preferences" Height="450" Width="800">
    <StackPanel Margin="10">
        <CheckBox IsChecked="{Binding EnableDarkTheme}">Dark Theme (requires restart)</CheckBox>
    </StackPanel>
</Window>
